#!/usr/bin/env ruby

require_relative '../lib/move.rb'

puts "Welcome to Tic Tac Toe!"
puts "Where would you like to go?"
users_input = gets.strip
board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]
index = input_to_index(users_input)
puts "index"
updated_board = move(board, index, "X")
display_board(updated_board)
